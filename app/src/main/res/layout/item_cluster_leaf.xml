<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_marker_general_cafe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cluster_leaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카페"
        android:textColor="@color/G800"
        style="@style/b3_b"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/iv_marker"
        app:layout_constraintEnd_toEndOf="@+id/iv_marker"
        app:layout_constraintTop_toBottomOf="@+id/iv_marker" />

</androidx.constraintlayout.widget.ConstraintLayout>