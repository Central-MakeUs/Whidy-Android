<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet_scrap_filter"
    android:paddingTop="10dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <TextView
        android:id="@+id/btn_register_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="등록순"
        android:textColor="@color/G900"
        style="@style/b2_sb"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintStart_toStartOf="@+id/gl_start"
        app:layout_constraintEnd_toEndOf="@+id/gl_end"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_register_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_scrap_filter_check"
        app:layout_constraintEnd_toEndOf="@+id/gl_end"
        app:layout_constraintTop_toTopOf="@+id/btn_register_order"
        app:layout_constraintBottom_toBottomOf="@+id/btn_register_order" />

    <View
        android:id="@+id/line_seperate"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/G100"
        app:layout_constraintTop_toBottomOf="@+id/btn_register_order"/>

    <TextView
        android:id="@+id/btn_alphabetical_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="가나다순"
        android:textColor="@color/G900"
        style="@style/b2_sb"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintStart_toStartOf="@+id/gl_start"
        app:layout_constraintEnd_toEndOf="@+id/gl_end"
        app:layout_constraintTop_toBottomOf="@+id/line_seperate" />

    <ImageView
        android:id="@+id/iv_alphabetical_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_scrap_filter_check"
        app:layout_constraintEnd_toEndOf="@+id/gl_end"
        app:layout_constraintTop_toTopOf="@+id/btn_alphabetical_order"
        app:layout_constraintBottom_toBottomOf="@+id/btn_alphabetical_order" />

</androidx.constraintlayout.widget.ConstraintLayout>
